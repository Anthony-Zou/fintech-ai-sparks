{
  "mcpServers": {
    "financial-intelligence": {
      "command": "python",
      "args": ["-m", "mcp_server.main"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": ".",
        "MCP_SERVER_NAME": "financial-intelligence",
        "LOG_LEVEL": "INFO"
      }
    }
  },
  "globalShortcut": "Ctrl+Shift+M",
  "theme": "dark",
  "mcpSettings": {
    "timeout": 30000,
    "retries": 3,
    "logLevel": "info"
  }
} 